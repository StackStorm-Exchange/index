{
    "description": "Add a server to a stream upstream server group",
    "enabled": true,
    "entry_point": "",
    "name": "stream.upstreams.servers.post",
    "parameters": {
        "auth": {
            "type": "string"
        },
        "body": {
            "required": true,
            "type": "object"
        },
        "headers": {
            "default": {
                "content-type": "application/json"
            },
            "type": "object"
        },
        "method": {
            "default": "POST",
            "immutable": true,
            "type": "string"
        },
        "params": {
            "type": "object"
        },
        "server": {
            "required": true,
            "type": "string"
        },
        "stream_upstream_name": {
            "required": true,
            "type": "string"
        },
        "timeout": {
            "default": 10,
            "type": "integer"
        },
        "url": {
            "default": "http://{{ server }}/api/3/stream/upstreams/{{ stream_upstream_name }}/servers/",
            "immutable": true,
            "type": "string"
        }
    },
    "runner_type": "http-request"
}
