{
    "description": "update a filter (resource: put /katello/api/content_views/:content_view_id/filters/:id)",
    "enabled": true,
    "entry_point": "lib/action.py",
    "name": "content_views.content_view_filters_ontent_updateviews",
    "pack": "foreman",
    "parameters": {
        "connection": {
            "description": "Name of <connection> from this pack's configuration that specifies how to connect to a server.",
            "required": false,
            "type": "string"
        },
        "content_view_id": {
            "description": "content view identifier",
            "required": true,
            "type": "number"
        },
        "id": {
            "description": "filter identifier",
            "required": true,
            "type": "number"
        },
        "inclusion": {
            "description": "specifies if content should be included or excluded, default:inclusion=false",
            "required": false,
            "type": "boolean"
        },
        "name": {
            "description": "new name for the filter",
            "required": false,
            "type": "string"
        },
        "operation": {
            "default": "content_views.content_view_filters_ontent_updateviews",
            "immutable": true,
            "type": "string"
        },
        "original_packages": {
            "description": "add all packages without errata to the included/excluded list. (packagefilter only)",
            "required": false,
            "type": "boolean"
        },
        "password": {
            "description": "Optional override of the password in <connection>. (required if <connection> is not specified)",
            "required": false,
            "secret": true,
            "type": "string"
        },
        "repository_ids": {
            "description": "list of repository ids",
            "required": false,
            "type": "array"
        },
        "server": {
            "description": "Optional override of the server in <connection> (required if <connection> is not specified).",
            "required": false,
            "type": "string"
        },
        "username": {
            "description": "Optional override of the username in <connection> (example: username@domain.tld) (required if <connection> is not specified).",
            "required": false,
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
