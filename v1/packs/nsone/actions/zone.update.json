{
    "description": "Update a zone in NS1",
    "enabled": true,
    "entry_point": "action.py",
    "name": "zone.update",
    "parameters": {
        "dnssec": {
            "required": false,
            "type": "boolean"
        },
        "expiry": {
            "description": "Zone Expiry (seconds)",
            "required": false,
            "type": "integer"
        },
        "hostmaster": {
            "required": false,
            "type": "string"
        },
        "link": {
            "description": "The name of the Zone to link this Zone to.",
            "required": false,
            "type": "string"
        },
        "meta": {
            "required": false,
            "type": "string"
        },
        "method": {
            "default": "update",
            "description": "The method to be called within the package",
            "immutable": true
        },
        "module": {
            "default": "zones",
            "description": "The 'ns1-python' rest module name (ns1.rest.<module>)",
            "immutable": true
        },
        "networks": {
            "required": false,
            "type": "string"
        },
        "nx_ttl": {
            "description": "Zone NX Domain TTL (seconds)",
            "required": false,
            "type": "integer"
        },
        "package": {
            "default": "Zones",
            "description": "The name of the class in the module to load",
            "immutable": true
        },
        "refresh": {
            "description": "Zone Refresh (seconds)",
            "required": false,
            "type": "integer"
        },
        "retry": {
            "description": "Zone Retry (seconds)",
            "required": false,
            "type": "integer"
        },
        "secondary": {
            "description": "A JSON Object containing information about the Secondary Zone. See API docs for more details.",
            "required": false,
            "type": "object"
        },
        "ttl": {
            "description": "Default Zone SOA TTL (seconds)",
            "required": false,
            "type": "integer"
        },
        "zone": {
            "description": "The name of the zone (domain.tld)",
            "required": true,
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
