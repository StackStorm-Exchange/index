{
    "description": "Search and return items in a folder",
    "enabled": true,
    "entry_point": "search_items.py",
    "name": "search_items",
    "pack": "msexchange",
    "parameters": {
        "folder": {
            "default": "Inbox",
            "description": "Folder to look within",
            "type": "string"
        },
        "include_body": {
            "default": true,
            "description": "Include the body of the message in the responses",
            "required": false,
            "type": "boolean"
        },
        "search_start_date": {
            "description": "[Optional] Date in valid ISO 8601 format to start search or for which to save attachments.\n",
            "required": false,
            "type": "string"
        },
        "subject": {
            "description": "Subject of the email",
            "required": false,
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
