{
    "description": "Create VPC with boto3action using assume_role",
    "enabled": false,
    "entry_point": "workflows/create_vpc_assume_role.yaml",
    "name": "create_vpc_assume_role",
    "pack": "aws_boto3",
    "parameters": {
        "availability_zone": {
            "description": "Availability zone to create subnet",
            "required": true,
            "type": "string"
        },
        "aws_access_key_id": {
            "description": "AWS Access Key",
            "secret": true,
            "type": "string"
        },
        "aws_secret_access_key": {
            "description": "AWS Secret Access Key",
            "secret": true,
            "type": "string"
        },
        "cidr_block": {
            "description": "VPC CIDR block",
            "required": true,
            "type": "string"
        },
        "region": {
            "description": "Region to create VPC",
            "required": true,
            "type": "string"
        },
        "role_arn": {
            "description": "ARN of the role",
            "required": true,
            "type": "string"
        },
        "serial_number": {
            "description": "Serial number of the MFA",
            "type": "string"
        },
        "subnet_cidr_block": {
            "description": "Subnet CIDR block",
            "required": true,
            "type": "string"
        },
        "token_code": {
            "description": "Token code from the MFA",
            "type": "string"
        },
        "use_mfa": {
            "default": false,
            "description": "Include MFA details.",
            "type": "boolean"
        }
    },
    "runner_type": "mistral-v2"
}
