{
    "description": "Share a me message into a channel.",
    "enabled": true,
    "entry_point": "run.py",
    "name": "chat.meMessage",
    "parameters": {
        "channel": {
            "description": "Channel to send message to. Can be a public channel, private group or IM channel. Can be an encoded ID, or a name.",
            "required": false,
            "type": "string"
        },
        "end_point": {
            "default": "chat.meMessage",
            "immutable": true,
            "type": "string"
        },
        "http_method": {
            "default": "POST",
            "required": true,
            "type": "string"
        },
        "text": {
            "description": "Text of the message to send.",
            "required": false,
            "type": "string"
        },
        "token": {
            "description": "Authentication token. Requires scope: `chat:write:user`",
            "required": false,
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
