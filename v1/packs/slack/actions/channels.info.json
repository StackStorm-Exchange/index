{
    "description": "Gets information about a channel.",
    "enabled": true,
    "entry_point": "run.py",
    "name": "channels.info",
    "parameters": {
        "channel": {
            "description": "Channel to get info on",
            "required": false,
            "type": "string"
        },
        "end_point": {
            "default": "channels.info",
            "immutable": true,
            "type": "string"
        },
        "http_method": {
            "default": "GET",
            "required": true,
            "type": "string"
        },
        "include_locale": {
            "description": "Set this to `true` to receive the locale for this channel. Defaults to `false`",
            "required": false,
            "type": "boolean"
        },
        "token": {
            "description": "Authentication token. Requires scope: `channels:read`",
            "required": false,
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
