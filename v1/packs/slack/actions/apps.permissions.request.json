{
    "description": "Allows an app to request additional scopes",
    "enabled": true,
    "entry_point": "run.py",
    "name": "apps.permissions.request",
    "parameters": {
        "end_point": {
            "default": "apps.permissions.request",
            "immutable": true,
            "type": "string"
        },
        "http_method": {
            "default": "GET",
            "required": true,
            "type": "string"
        },
        "scopes": {
            "required": true,
            "type": "string"
        },
        "token": {
            "required": false,
            "type": "string"
        },
        "trigger_id": {
            "required": true,
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
