{
    "description": "Searches for messages matching a query.",
    "enabled": true,
    "entry_point": "run.py",
    "name": "search.messages",
    "parameters": {
        "count": {
            "default": 20,
            "description": "Pass the number of results you want per \"page\". Maximum of `100`.",
            "required": false,
            "type": "integer"
        },
        "end_point": {
            "default": "search.messages",
            "immutable": true,
            "type": "string"
        },
        "highlight": {
            "description": "Pass a value of `true` to enable query highlight markers (see below).",
            "required": false,
            "type": "boolean"
        },
        "http_method": {
            "default": "GET",
            "required": true,
            "type": "string"
        },
        "page": {
            "default": 1,
            "required": false,
            "type": "integer"
        },
        "query": {
            "description": "Search query.",
            "required": true,
            "type": "string"
        },
        "sort": {
            "default": "score",
            "description": "Return matches sorted by either `score` or `timestamp`.",
            "required": false,
            "type": "string"
        },
        "sort_dir": {
            "default": "desc",
            "description": "Change sort direction to ascending (`asc`) or descending (`desc`).",
            "required": false,
            "type": "string"
        },
        "token": {
            "description": "Authentication token. Requires scope: `search:read`",
            "required": true,
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
