{
    "description": "Update a given firewall.",
    "enabled": true,
    "entry_point": "src/wrapper.py",
    "name": "neutron.firewall.update",
    "parameters": {
        "base": {
            "default": "firewall-update",
            "immutable": true,
            "type": "string"
        },
        "cloud": {
            "description": "A specific cloud to query",
            "type": "string"
        },
        "description": {
            "description": "Description for the firewall.",
            "type": "string"
        },
        "ep": {
            "default": "EntryPoint.parse('firewall-update = neutronclient.neutron.v2_0.fw.firewall:UpdateFirewall')",
            "immutable": true,
            "type": "string"
        },
        "id": {
            "description": "ID or name of firewall to update.",
            "required": true,
            "type": "string"
        },
        "name": {
            "description": "Name for the firewall.",
            "type": "string"
        },
        "no_routers": {
            "default": false,
            "description": "Associate no routers with the firewall (requires FWaaS router insertion extension).",
            "type": "boolean"
        },
        "policy": {
            "description": "ID or name of the firewall policy associated to this firewall.",
            "type": "string"
        },
        "project_id": {
            "description": "Run the action under a different project, identified by id",
            "type": "string"
        },
        "project_name": {
            "description": "Run the action under a different project, identified by name",
            "type": "string"
        },
        "request_format": {
            "description": "==SUPPRESS== (choices: json)",
            "type": "string"
        },
        "router": {
            "description": "ID or name of the router associated with the firewall (requires FWaaS router insertion extension to be enabled). This option can be repeated.",
            "type": "array"
        }
    },
    "runner_type": "python-script"
}
