{
    "description": "Show resource metadata",
    "enabled": true,
    "entry_point": "src/wrapper.py",
    "name": "stack.resource.metadata",
    "parameters": {
        "base": {
            "default": "stack resource metadata",
            "immutable": true,
            "type": "string"
        },
        "cloud": {
            "description": "A specific cloud to query",
            "type": "string"
        },
        "ep": {
            "default": "EntryPoint.parse('stack_resource_metadata = heatclient.osc.v1.resource:ResourceMetadata')",
            "immutable": true,
            "type": "string"
        },
        "format": {
            "default": "json",
            "description": "the output format, defaults to json (choices: json, shell, table, value, yaml)",
            "type": "string"
        },
        "noindent": {
            "default": false,
            "description": "whether to disable indenting the JSON",
            "type": "boolean"
        },
        "project_id": {
            "description": "Run the action under a different project, identified by id",
            "type": "string"
        },
        "project_name": {
            "description": "Run the action under a different project, identified by name",
            "type": "string"
        },
        "resource": {
            "description": "Name of the resource to show the metadata for",
            "required": true,
            "type": "string"
        },
        "stack": {
            "description": "Stack to display (name or ID)",
            "required": true,
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
