{
    "description": "Provides human-readable output from a state or plan file",
    "enabled": true,
    "entry_point": "show.py",
    "name": "show",
    "parameters": {
        "plan_path": {
            "description": "Path of the terraform plan",
            "required": true,
            "type": "string"
        },
        "terraform_exec": {
            "default": "terraform",
            "description": "Terraform executable path (default: terraform in the $PATH)",
            "required": false,
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
