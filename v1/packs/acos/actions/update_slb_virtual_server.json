{
    "description": "Update SLB virtual-server configuration",
    "enabled": true,
    "entry_point": "ax_action_runner.py",
    "name": "update_slb_virtual_server",
    "pack": "acos",
    "parameters": {
        "action": {
            "default": "update",
            "immutable": true,
            "type": "string"
        },
        "appliance": {
            "description": "The appliance information to connect, which is specified at the 'appliance' parameter in the configuration.",
            "required": true,
            "type": "string"
        },
        "ip_address": {
            "description": "IP address to set target virtual-server",
            "type": "string"
        },
        "name": {
            "default": "",
            "description": "the name of VirtualPort to be registered",
            "type": "string"
        },
        "object_path": {
            "default": "slb.virtual_server",
            "immutable": true,
            "type": "string"
        },
        "one_target": {
            "default": true,
            "immutable": true,
            "type": "boolean"
        },
        "port_list": {
            "description": "Port information to set target virtual-server\n(c.f. https://acos.docs.a10networks.com/axapi/521/slb_virtual_server.html#port-list)\n",
            "type": "array"
        },
        "specified_target": {
            "description": "Specify the target dynamically, (key: 'target', 'api_version', 'userid', 'passwd')",
            "type": "object"
        },
        "vrid": {
            "description": "VRID to set target virtual-server (1-31)",
            "type": "integer"
        }
    },
    "runner_type": "python-script"
}
