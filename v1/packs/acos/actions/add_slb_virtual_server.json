{
    "description": "Add a VirtualServer to SLB",
    "enabled": true,
    "entry_point": "ax_action_runner.py",
    "name": "add_slb_virtual_server",
    "pack": "acos",
    "parameters": {
        "action": {
            "default": "create",
            "immutable": true,
            "type": "string"
        },
        "appliance": {
            "description": "The appliance information to connect, which is specified at the 'appliance' parameter in the configuration.",
            "required": true,
            "type": "string"
        },
        "arp_disable": {
            "default": true,
            "enum": [
                true,
                false
            ],
            "required": false,
            "type": "boolean"
        },
        "ip_address": {
            "description": "the IP-Address to be attached to added VirtualServer (called Virtual-IP)",
            "required": true,
            "type": "string"
        },
        "name": {
            "description": "the name of VirtualServer to be registered",
            "required": true,
            "type": "string"
        },
        "object_path": {
            "default": "slb.virtual_server",
            "immutable": true,
            "type": "string"
        },
        "one_target": {
            "default": true,
            "immutable": true,
            "type": "boolean"
        },
        "status": {
            "type": "string"
        },
        "vrid": {
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
