{
    "description": "Retrieve information about a particular JIRA issue.",
    "enabled": true,
    "entry_point": "get_issue.py",
    "name": "get_issue",
    "parameters": {
        "include_attachments": {
            "default": false,
            "description": "True to include issue attachments.",
            "required": true,
            "type": "boolean"
        },
        "include_comments": {
            "default": false,
            "description": "True to include issue comments.",
            "required": true,
            "type": "boolean"
        },
        "include_components": {
            "default": false,
            "description": "True to include custom fields.",
            "required": true,
            "type": "boolean"
        },
        "include_customfields": {
            "default": false,
            "description": "True to include custom fields.",
            "required": true,
            "type": "boolean"
        },
        "include_links": {
            "default": false,
            "description": "True to include linked issues.",
            "required": true,
            "type": "boolean"
        },
        "include_subtasks": {
            "default": false,
            "description": "True to include custom fields.",
            "required": true,
            "type": "boolean"
        },
        "issue_key": {
            "description": "Issue key (e.g. PROJECT-1000).",
            "required": true,
            "type": "string"
        },
        "sanitize_formatting": {
            "default": false,
            "description": "When set to true removes jinja template artifacts.",
            "required": true,
            "type": "boolean"
        }
    },
    "runner_type": "python-script"
}
