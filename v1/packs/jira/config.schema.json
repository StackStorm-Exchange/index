{
    "auth_method": {
        "default": "oauth",
        "description": "Authentication method to use - oauth, basic or pat",
        "enum": [
            "oauth",
            "basic",
            "pat",
            "cookie"
        ],
        "required": true,
        "secret": false,
        "type": "string"
    },
    "consumer_key": {
        "description": "Consumer key",
        "required": false,
        "secret": true,
        "type": "string"
    },
    "oauth_secret": {
        "description": "OAuth secret",
        "required": false,
        "secret": true,
        "type": "string"
    },
    "oauth_token": {
        "description": "OAuth token",
        "required": false,
        "secret": true,
        "type": "string"
    },
    "password": {
        "description": "Password if using the basic or cookie auth_method",
        "required": false,
        "secret": true,
        "type": "string"
    },
    "poll_interval": {
        "default": 30,
        "description": "Polling interval - default 30s",
        "required": false,
        "secret": false,
        "type": "integer"
    },
    "project": {
        "description": "Project to be used as default for actions that don't require or allow a project",
        "required": true,
        "secret": false,
        "type": "string"
    },
    "rsa_cert_file": {
        "description": "Path to a private key file, e.g. /home/vagrant/jira.pem",
        "required": false,
        "secret": false,
        "type": "string"
    },
    "token": {
        "description": "PAT token",
        "required": false,
        "secret": true,
        "type": "string"
    },
    "url": {
        "description": "URL of the JIRA instance (e.g. ``https://myproject.atlassian.net``)",
        "required": true,
        "secret": false,
        "type": "string"
    },
    "username": {
        "description": "Username if using the basic or cookie auth_method",
        "required": false,
        "secret": false,
        "type": "string"
    },
    "validate": {
        "default": false,
        "description": "If true it will validate your credentials first.",
        "required": false,
        "type": "boolean"
    },
    "verify": {
        "default": true,
        "description": "Verify SSL certificate. Set to False to disable verification. Default True",
        "type": "boolean"
    }
}
