            "required": true,
            "type": "string"
        },
        "module_path": {
            "default": "lib.tags",
            "immutable": true,
            "type": "string"
        },
        "source": {
            "description": "Show tags from a particular source",
            "required": false,
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
