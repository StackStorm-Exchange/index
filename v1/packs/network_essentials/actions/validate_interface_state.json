{
    "description": "This validates L1 and L2 state for port channel, physical, ve, loopback interface. is UP.",
    "enabled": true,
    "entry_point": "validate_interface_state.py",
    "name": "validate_interface_state",
    "pack": "network_essentials",
    "parameters": {
        "intf_name": {
            "description": "The interface name physical port, port channel number, ve, loopback. Examples are 224/0/1 or 7",
            "position": 4,
            "required": true,
            "type": "string"
        },
        "intf_state": {
            "description": "The interface state (up or down).",
            "enum": [
                "up",
                "down"
            ],
            "position": 5,
            "required": true,
            "type": "string"
        },
        "intf_type": {
            "default": "tengigabitethernet",
            "description": "The interface type.",
            "enum": [
                "gigabitethernet",
                "tengigabitethernet",
                "fortygigabitethernet",
                "hundredgigabitethernet",
                "port_channel",
                "ethernet",
                "ve",
                "loopback"
            ],
            "position": 3,
            "required": true,
            "type": "string"
        },
        "mgmt_ip": {
            "description": "The management IP address of the target device.",
            "position": 0,
            "required": true,
            "type": "string"
        },
        "password": {
            "description": "The login password to connect to the device.",
            "position": 2,
            "secret": true,
            "type": "string"
        },
        "rbridge_id": {
            "description": "A single or a list of RBridge IDs separated by comma, for example, 1 or 1,2, 4.  This parameter is only applicable for VDX switches.",
            "position": 6,
            "type": "array"
        },
        "username": {
            "description": "The login user name to connect to the device.",
            "position": 1,
            "type": "string"
        }
    },
    "runner_type": "python-script",
    "tags": [
        {
            "name": "group",
            "value": "Validate Edge Ports"
        },
        {
            "name": "suite",
            "value": "DCFABRIC"
        }
    ]
