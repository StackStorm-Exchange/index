{
    "description": "",
    "enabled": true,
    "entry_point": "ipa_action.py",
    "name": "aci_mod",
    "pack": "freeipa",
    "parameters": {
        "aciname": {
            "type": "string"
        },
        "aciprefix": {
            "enum": [
                "permission",
                "delegation",
                "selfservice",
                "none"
            ],
            "type": "string"
        },
        "all": {
            "default": false,
            "required": true,
            "type": "boolean"
        },
        "attrs": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "connection": {
            "description": "Name of <connection> from this pack's configuration that specifies how to connect to a IPA server.",
            "required": false,
            "type": "string"
        },
        "filter": {
            "type": "string"
        },
        "group": {
            "type": "string"
        },
        "memberof": {
            "type": "string"
        },
        "method": {
            "default": "aci_mod",
            "description": "Name of IPA command to be executed.",
            "immutable": true,
            "type": "string"
        },
        "password": {
            "description": "Optional override of the IPA password in <connection>. (required if <connection> is not specified)",
            "required": false,
            "secret": true,
            "type": "string"
        },
        "permission": {
            "type": "string"
        },
        "permissions": {
            "items": {
                "type": "string"
            },
            "type": "array"
        },
        "raw": {
            "default": false,
            "required": true,
            "type": "boolean"
        },
        "selfaci": {
            "default": false,
            "required": true,
            "type": "boolean"
        },
        "server": {
            "description": "Optional override of the IPA server in <connection> (required if <connection> is not specified).",
            "required": false,
            "type": "string"
        },
        "session": {
            "description": "Login session cookie. If empty then username/password will be used to login prior to running this operation",
            "required": false,
            "secret": true,
            "type": "string"
        },
        "subtree": {
            "type": "string"
        },
        "targetgroup": {
            "type": "string"
        },
        "type": {
            "enum": [
                "user",
                "group",
                "host",
                "service",
                "hostgroup",
                "netgroup",
                "dnsrecord"
            ],
            "type": "string"
        },
        "username": {
            "description": "Optional override of the IPA username in <connection> (example: username@domain.tld) (required if <connection> is not specified).",
            "required": false,
            "type": "string"
        },
        "verify_ssl": {
            "description": "Verify SSL certificates on the server",
            "required": false,
            "type": "boolean"
        },
        "version": {
            "type": "string"
        }
    },
    "runner_type": "python-script"
}
